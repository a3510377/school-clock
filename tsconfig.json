{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "removeComments": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es6", "esnext", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "types": ["vite-plugin-svg-icons/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
